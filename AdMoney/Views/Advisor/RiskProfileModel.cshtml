@{
    var modelList = ViewData["modelList"] as List<ModelSelectData>;
    var clientId = ViewData["clientId"];
}
 <div class="container">


    <form id="modelForm" class="col-8 border border-primary py-5 px-5 ">
        <h5 class="my-2" id="model"> Select Model for This  Client </h5>
       
       
        <input type="hidden" id="clientId" value="@clientId" />
            <div id="radioOptionsForModel">
                @if (modelList != null)
                {
                    @foreach (var mod in modelList)
                    {
                    <div class="form-check ">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="@mod.modelId">
                        <label class="form-check-label border border-dark px-3 py-2" for="flexRadioDefault1">
                                 Model Id :  @mod.modelId     Risk : @mod.riskProfile      
                                @if(mod.assetInfo != null)
                            {
                                <p>
                                @foreach(var ast in mod.assetInfo)
                                {
                                    <p>  @ast.assetName   @ast.securityName       @ast.weight</p>
                                }
                                </p>

                            }
                        </label>
                        </div>
                    }
                }
        </div>
                @if (modelList != null)
                {
        
        <div class="my-5 px-5" id="nextQuestion">
            <button type="submit" class="btn btn-primary float-right" id="AddModelForClients">     Submit  </button>
        </div>
                }
    </form>
