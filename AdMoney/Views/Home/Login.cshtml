@{
    var check = ViewData["check"] as string; 
}

<div class="container" id="loginBox">
    
    <div class="row justify-content-center my-6">
        <div class="col-4 my-5">
         <h3>  Login </h3>
        @using (Html.BeginForm("Login", "Home",FormMethod.Post))
        {
            <div class="form-outline">
                <input type="email" id="formControlDefault" class="form-control" name="email" />
                <label class="form-label" for="formControlDefault">Email</label>
            </div>
            <div class="form-outline">
                <input type="password" id="formControlDefault" class="form-control" name="password" />
                <label class="form-label" for="formControlDefault">Passwordt</label>
            </div>

                <label for="role"> Your Role </label>

                <select name="role" id="role" required>
                    <option value="Advisor">Advisor</option>
                    <option value="Admin">Admin</option>

                </select>
          
            <input type="submit" value="Login"/>
          
        }
        @if(check != null  && check == "true")
            {
                <script>
                    alert("Wrong Credential");
                </script>
            }

        
        </div>
    </div>
  
</div>